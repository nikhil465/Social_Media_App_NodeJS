<link rel="stylesheet" type="text/css" href="/css/user_signin.css">

<div class="container">
  <h1>Sign In</h1>
    <form action="/users/create-session" method="POST">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password">
        </div>
        <button type="submit">Sign In</button>
    </form>
    <div class="forgot-password">
        <a href="/auth">Forgot Password?</a>
    </div>
    <div class="google-signin">
        <a href="/users/auth/google">Sign In/Sign Up with Google</a>
    </div>

</div>

<script src="/js/user_signin.js"></script>
